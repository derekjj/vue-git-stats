{
	"name": "vue-git-stats",
	"version": "0.1.7",
	"description": "Beautiful GitHub/GitLab/Bitbucket contribution graphs and stats for Vue 3 with automated data fetching",
	"author": "Derek Johnston derek@derekjohnston.ca",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/derekjj/vue-git-stats.git"
	},
	"keywords": [
		"vue",
		"vue3",
		"github",
		"gitlab",
		"bitbucket",
		"contributions",
		"stats",
		"portfolio",
		"developer",
		"component"
	],
	"type": "module",
	"main": "./dist/vue-git-stats.umd.js",
	"module": "./dist/vue-git-stats.es.js",
	"exports": {
		".": {
			"import": "./dist/vue-git-stats.es.js",
			"require": "./dist/vue-git-stats.umd.js",
			"types": "./dist/index.d.ts"
		},
		"./style.css": "./dist/style.css"
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"templates",
		"cli"
	],
	"bin": {
		"vue-git-stats": "cli/init.js"
	},
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc && vite build",
		"preview": "vite preview",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"type-check": "vue-tsc --noEmit",
		"lint": "yarn lint:js && yarn lint:prettier",
		"format": "prettier --write src/",
		"demo": "vite demo --open",
		"test:build": "npm run build && node -e \"console.log('âœ… Build successful')\"",
		"generate:dummy": "node -e \"import('./src/utils/generateDummyData.js').then(m => { const data = m.generateDummyStats(); console.log(JSON.stringify(data, null, 2)); })\"",
		"lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
		"lint:prettier": "prettier --check .",
		"lintfix": "prettier --write --list-different . && npm lint:js --fix"
	},
	"peerDependencies": {
		"vue": "^3.3.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.1.5",
		"@types/node": "^20.10.6",
		"@vitejs/plugin-vue": "^5.0.0",
		"@vitest/ui": "^1.0.4",
		"@vue/test-utils": "^2.4.3",
		"@vue/tsconfig": "^0.5.1",
		"eslint": "^8.57.0",
		"eslint-plugin-vue": "^9.20.0",
		"jsdom": "^23.0.1",
		"prettier": "^3.2.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.0",
		"vite-plugin-dts": "^3.7.0",
		"vitest": "^1.0.4",
		"vue": "^3.4.0",
		"vue-tsc": "^2.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
